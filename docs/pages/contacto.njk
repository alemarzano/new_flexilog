{% extends 'layout.njk' %}

{% set page_title = "Contacto | Flexilog"%}}}
{% set page_description = ""%}}}

{% block header %}
    {% import 'macros/nav-macro.njk' as nav %}
    {{nav.active('contacto')}}
{% endblock %}

{% block content %}
    <section class="pt-0">

        <div class="container lg:max-w-5xl lg:mx-auto">
            <div class="text-center py-8">
                <img src="./img/guarda.svg" class="inline-block h-12 w-auto lg:h-16" alt="">
            </div>
             <form class=" form">
                    <div class="md:flex justify-between">
                        <div class="mb-4 md:mr-2 md:w-6/12">
                            <label class="form__label" for="Nombre">
                                Nombre
                            </label>
                            <input class="form__input" id="nombre" type="text" placeholder="Nombre">
                        </div>
                        <div class="mb-4 md:ml-2 md:w-6/12">
                            <label class="form__label" for="Apellidos">
                                Apellidos
                            </label>
                            <input class="form__input" id="apellido" type="text" placeholder="Apellidos">
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form__label" for="empresa">
                            ¿De qué empresa nos escribís?
                        </label>
                        <input class="form__input" id="empresa" type="text" placeholder="Nombre de la empresa">
                    </div>
                    <div class="mb-4">
                        <label class="form__label" for="mail">
                            Correo electrónico
                        </label>
                        <input class="form__input" id="mail" type="email" placeholder="Ingresá tu correo electrónico">
                    </div>
                    <div class="mb-4">
                        <label class="form__label" for="telefono">
                            Teléfono
                        </label>
                        <input class="form__input" id="telefono" type="email" placeholder="Ingresá tu teléfono">
                    </div>
                    <div class="mb-4">
                        <label class="form__label" for="consulta">
                            Tu consulta
                        </label>

                        <textarea class="form__input" name="consulta" id="consulta" cols="30" rows="7" placeholder="Escriba su consulta"></textarea>
                    </div>
                    <div class="flex items-center justify-end">

                        <a class="bg-pink-500 text-white py-2 px-8 rounded-lg font-medium hover:bg-pink-400" href="#">
                            Enviar
                        </a>
                    </div>
                </form>
            <div class="text-center py-8">
                <img src="./img/guarda.svg" class="inline-block h-12 w-auto lg:h-16" alt="">
            </div>
        </div>

    </section>
{% endblock content %}