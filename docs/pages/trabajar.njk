{% extends 'layout.njk' %}

{% set page_title = "Trabjá con Nosotros | Flexilog"%}}}
{% set page_description = ""%}}}

{% block header %}
    {% import 'macros/nav-macro.njk' as nav %}
    {{nav.active('home')}}
{% endblock %}

{% block content %}
    <section class="pt-0">
        <div class="container lg:max-w-5xl lg:mx-auto">

            <p class="text-xl text-indigo-500 tracking-wide mb-8 text-center">Dejanos tu Curriculum para futuras oportunidades laborales
            </p>
            <div class="text-center py-8">
                <img src="./img/guarda.svg" class="inline-block h-12 w-auto lg:h-16" alt="">
            </div>
            <form class="form">
                <div class="md:flex justify-between">
                    <div class="mb-4 md:mr-2 md:w-6/12">
                        <label class="form__label" for="Nombre">
                            Nombre
                        </label>
                        <input class="form__input" id="nombre" type="text" placeholder="Nombre">
                    </div>
                    <div class="mb-4 md:ml-2 md:w-6/12">
                        <label class="form__label" for="Apellidos">
                            Apellidos
                        </label>
                        <input class="form__input" id="apellido" type="text" placeholder="Apellidos">
                    </div>
                </div>

                <div class="mb-4 ">
                    <label class="form__label" for="mail">
                        Correo electrónico
                    </label>
                    <input class="form__input" id="mail" type="email" placeholder="Ingresá tu correo electrónico">
                </div>
                <div class="mb-4 "></div>

                <div class="mb-4">
                    <label class="form__label" for="consulta">
                        Presentación
                    </label>

                    <textarea class="form__input" name="consulta" id="consulta" cols="30" rows="7" placeholder="Contanos tus intereses y aspiraciones profesionales"></textarea>
                </div>
                <div class="flex items-center justify-around">
                    <div class="mr-8 w-1/2">
                        <label class="button border-indigo-400 mx-none w-100 rounded-3" for="file_cv">Adjuntar CV</label>
                        <input class="form__input" type="file" id="file_cv" name="file_cv">
                    </div>

                    <button type="submit" class="w-1/2 bg-pink-500 text-white py-2 px-8 rounded-lg font-medium hover:bg-pink-400" href="#">
                        Enviar
                    </button>
                </div>
            </form>
            <div class="text-center pb-8">
                <img src="./img/guarda.svg" class="inline-block h-12 w-auto lg:h-16" alt="">
            </div>
        </div>

    </section>
{% endblock content %}